<% layout("layouts/boilerplate")%>
    <div class="row">
        <h1 clas="text-center">Edit Campground</h1>
        <div class="col-6 offset-md-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campgroud[title]" id="title"
                        value="<%=campground.title%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campgroud[location]" id="location"
                        value="<%=campground.location%>">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="campgroud[image]" id="image"
                        value="<%=campground.image%>">
                </div>

                <div class=" mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campgroud[price]" value="<%=campground.price%>">
                    </div>
                </div>

                <div class=" mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description"
                        name="campground[description]"><%=campground.desciption%></textarea>
                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <footer><a href="/campgrounds">Back To Campgrounds</a></footer>
        </div>
    </div>